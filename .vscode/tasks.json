{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active file",
      "type": "shell",
      "command": "gcc",
      "args": [
        "${file}",
        "-g",                                 // include debug symbols
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "problemMatcher": ["$gcc"]
    }
  ]
}
